<UserControl x:Class="_310_KeyPresses.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <StackPanel>
        <TextBox x:Name="Texto" KeyDown="Texto_KeyDown" KeyUp="Texto_KeyUp" 
 TextChanged="Texto_TextChanged" Width="300" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBox>
        <ListBox x:Name="lista" Width="300" VerticalAlignment="bottom" HorizontalAlignment="Center"></ListBox>
    </StackPanel>

</UserControl>
