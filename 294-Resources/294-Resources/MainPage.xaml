<UserControl x:Class="_294_Resources.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="Fundo">
            <LinearGradientBrush.GradientStops>
                <GradientStop Offset="0.00" Color="DarkGreen" />
                <GradientStop Offset="0.50" Color="Yellow" />
                <GradientStop Offset="1.00" Color="DarkGreen" />
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="{StaticResource Fundo}">
        <TextBlock Text="um texto qualquer" FontSize="30" Foreground="{StaticResource Fundo}"></TextBlock>
    </Grid>
</UserControl>
