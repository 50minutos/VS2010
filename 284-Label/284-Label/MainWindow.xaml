<Window x:Class="_284_Label.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Label Margin="10 10 10 0" Target="{Binding ElementName=textBox1}">Digite o valor de _A:</Label>
        <TextBox Margin="10 0 10 10" Name="textBox1"></TextBox>

        <Label Margin="10 10 10 0" Target="{Binding ElementName=textBox2}">Digite o valor de _B:</Label>
        <TextBox Margin="10 0 10 10" Name="textBox2"></TextBox>
    </StackPanel>

</Window>
