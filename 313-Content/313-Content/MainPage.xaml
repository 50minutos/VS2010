<UserControl x:Class="_313_Content.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <StackPanel>
        <Button Margin="10" Content="Texto do botão" Width="100" Height="50"></Button>
        <Button Margin="10" Width="100" Height="50">
            <TextBlock Text="Outro botão"></TextBlock>
        </Button>
        <Button Margin="10" Width="59" Height="60">
            <Image Source="Calculator.png"></Image>
        </Button>
        <Button Margin="10" Width="100" Height="100">
            <StackPanel>
                <Image Source="Calculator.png" Width="59" Height="60"/>
                <TextBlock Margin="3" Text="outro botão"></TextBlock>
            </StackPanel>
        </Button>

        <Button Margin="3" Height="70" Width="100">
            <Grid Margin="5">
                <Polygon Points="0, 15, 15, 0, 30, 0, 45, 15, 60, 15, 45, 30, 30, 30, 15, 15, 0, 15" Fill="Red" />
            </Grid>
        </Button>
    </StackPanel>
</UserControl>
