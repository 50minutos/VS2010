<Window x:Class="_289_Slider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Slider x:Name="Tamanho" Orientation="Horizontal" Minimum="1" Maximum="800" Value="200" VerticalAlignment="Top"/>
        <Image Source="mctSummit2009.jpg" Width="{Binding ElementName=Tamanho, Path=Value}" VerticalAlignment="Center"></Image>
    </Grid>
</Window>
